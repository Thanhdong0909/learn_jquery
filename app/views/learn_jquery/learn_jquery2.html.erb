  <tr>
    <td>Last name</td>
    <td> <input type="text" id="txtLastName" class = "inputRequired" > </td>
    <td> <img src="div.jpg" id= "imgLastNameHelp" width="20" height="20" > </td>
    <td><div id="divLastNameHelp" style="display: none;"> Please enter your last name </div></td>
